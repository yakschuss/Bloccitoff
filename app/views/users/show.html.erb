<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>



<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />

      <div class="media-body">
        <h2 class="media-heading"><%= @user.first_name %> <%= @user.last_name %></h2>
        <br>
        <h3>
          <%= pluralize(@user.items.count, 'task') %> left
        </h3>
        <br>
        <%= render partial: "items/form", locals: {user: @user, item: Item.new} %>
      </div>
      <br>

        <div class="media">
          <ul class="list-group">
          <%= render partial: 'items/item', locals: {user: @user}%>
          </ul>
        </div>

    </div>
  </div>
</div>
